<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkTrackingSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WorkTrackingSystem.styles.css" asp-append-version="true" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        /* Custom Navbar Styling */
        .navbar-custom {
            background-color: #197fca; /* Primary company color */
            padding: 1rem 2rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand-custom {
            font-size: 1.8rem;
            font-weight: 700;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .navbar-brand-custom:hover {
                color: #ed3d34; /* Accent color on hover */
            }

        .nav-link-custom {
            font-size: 1.3rem; /* Larger text */
            font-weight: 600;
            color: #fff !important; /* White text */
            padding: 0.75rem 1.5rem;
            transition: all 0.3s ease;
            position: relative;
        }

            .nav-link-custom:hover {
                color: #ed3d34 !important; /* Accent color on hover */
                background-color: rgba(255, 255, 255, 0.1);
                border-radius: 5px;
            }

            .nav-link-custom i {
                margin-right: 8px; /* Space between icon and text */
            }

        .nav-item {
            margin: 0 10px; /* Spacing between items */
        }

        .navbar-toggler-custom {
            border-color: #fff;
        }

            .navbar-toggler-custom .navbar-toggler-icon {
                background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255, 255, 255, 1)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand navbar-brand-custom" asp-area="" asp-controller="Home" asp-action="Index">WorkTrackingSystem</a>
                <button class="navbar-toggler navbar-toggler-custom" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-area="EmployeeSystem" asp-controller="Dashboard">
                                <i class="fas fa-user"></i> Nhân viên
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-area="HRManager" asp-controller="Dashboard" >
                                <i class="fas fa-users"></i> Quản lý nhân sự
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-area="ProjectManager" asp-controller="Dashboard" >
                                <i class="fas fa-tasks"></i> Quản lý công việc
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-area="AdminSystem" asp-controller="Dashboard">
                                <i class="fas fa-cogs"></i> Quản lý hệ thống
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            © 2025 - WorkTrackingSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>