@model WorkTrackingSystem.Models.Analysis

@{
    ViewData["Title"] = "Xóa phân tích";
    Layout = "~/Areas/ProjectManager/Views/Shared/_ProjectManager.cshtml";
}

<div class="">
    <h1 class="mb-4">Xóa phân tích</h1>

    <p>Bạn có chắc chắn muốn xóa phân tích này?</p>

    <div>
        <dl class="row">
            <dt class="col-sm-3"><i class="bi bi-calculator"></i> Tổng số:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Total)</dd>

            <dt class="col-sm-3"><i class="bi bi-check-circle"></i> Đúng hạn:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Ontime)</dd>

            <dt class="col-sm-3"><i class="bi bi-exclamation-triangle"></i> Trễ hạn:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Late)</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-x"></i> Quá hạn:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Overdue)</dd>

            <dt class="col-sm-3"><i class="bi bi-hourglass-split"></i> Đang xử lý:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Processing)</dd>

            <dt class="col-sm-3"><i class="bi bi-clock"></i> Thời gian:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Time)</dd>

            <dt class="col-sm-3"><i class="bi bi-trash"></i> Đã xóa:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IsDelete)</dd>

            <dt class="col-sm-3"><i class="bi bi-check-circle"></i> Hoạt động:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IsActive)</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-plus"></i> Ngày tạo:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreateDate)</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-check"></i> Ngày cập nhật:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdateDate)</dd>

            <dt class="col-sm-3"><i class="bi bi-person-plus"></i> Người tạo:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreateBy)</dd>

            <dt class="col-sm-3"><i class="bi bi-person-check"></i> Người cập nhật:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdateBy)</dd>

            <dt class="col-sm-3"><i class="bi bi-person"></i> Nhân viên:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.Id)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Xóa</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại danh sách</a>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">