@model WorkTrackingSystem.Models.Employee

@{
    ViewData["Title"] = "Xóa nhân viên";
    Layout = "~/Areas/ProjectManager/Views/Shared/_ProjectManager.cshtml";
}

<div class="">
    <h1 class="mb-4">Xóa nhân viên</h1>

    <p>Bạn có chắc chắn muốn xóa nhân viên này?</p>

    <div>
        <dl class="row">
            <dt class="col-sm-3"><i class="bi bi-code"></i> Mã:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Code)</dd>

            <dt class="col-sm-3"><i class="bi bi-person"></i> Tên:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>

            <dt class="col-sm-3"><i class="bi bi-person"></i> Họ:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>

            <dt class="col-sm-3"><i class="bi bi-gender-ambiguous"></i> Giới tính:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Gender)</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-date"></i> Ngày sinh:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Birthday)</dd>

            <dt class="col-sm-3"><i class="bi bi-telephone"></i> Điện thoại:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

            <dt class="col-sm-3"><i class="bi bi-envelope"></i> Email:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-plus"></i> Ngày tuyển dụng:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HireDate)</dd>

            <dt class="col-sm-3"><i class="bi bi-house"></i> Địa chỉ:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

            <dt class="col-sm-3"><i class="bi bi-image"></i> Ảnh đại diện:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Avatar)</dd>

            <dt class="col-sm-3"><i class="bi bi-trash"></i> Đã xóa:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IsDelete)</dd>

            <dt class="col-sm-3"><i class="bi bi-check-circle"></i> Hoạt động:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IsActive)</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-plus"></i> Ngày tạo:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreateDate)</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-check"></i> Ngày cập nhật:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdateDate)</dd>

            <dt class="col-sm-3"><i class="bi bi-person-plus"></i> Người tạo:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreateBy)</dd>

            <dt class="col-sm-3"><i class="bi bi-person-check"></i> Người cập nhật:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdateBy)</dd>

            <dt class="col-sm-3"><i class="bi bi-building"></i> Phòng ban:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Department.Id)</dd>

            <dt class="col-sm-3"><i class="bi bi-briefcase"></i> Chức vụ:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Position.Id)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Xóa</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại danh sách</a>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">