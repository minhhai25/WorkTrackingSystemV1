@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a asp-controller="Dashboard" asp-action="Index" class="brand-link">
        <img src="~/images/logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Quản lý công việc</span>
    </a>

    <div class="sidebar">
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/images/avatar.png" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                @if (HttpContextAccessor.HttpContext.Session.GetString("ProjectManagerLogin") != null)
                {
                    <a href="#" class="d-block">@HttpContextAccessor.HttpContext.Session.GetString("ProjectManagerLogin")</a>
                }
                else
                {
                    <a href="#" class="d-block">Guest</a>
                }
            </div>
        </div>

        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Tìm kiếm" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
