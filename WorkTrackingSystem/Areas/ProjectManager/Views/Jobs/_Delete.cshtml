@model WorkTrackingSystem.Models.Job

@{
    ViewData["Title"] = "Xóa công việc";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-danger"><i class="bi bi-trash"></i> Xóa công việc</h1>
        <button type="button" class="btn btn-outline-secondary" onclick="closeDetailSection()">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>

    <p class="lead text-center">Bạn có chắc chắn muốn xóa công việc này?</p>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card p-3">
                <dl class="row">
                    <dt class="col-sm-5"><i class="bi bi-card-heading"></i> Tên công việc:</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-5"><i class="bi bi-file-text"></i> Mô tả:</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Description)</dd>

                    <dt class="col-sm-5"><i class="bi bi-calendar-event"></i> Hạn chót 1:</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Deadline1)</dd>

                    <dt class="col-sm-5"><i class="bi bi-calendar-event"></i> Hạn chót 2:</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Deadline2)</dd>

                    <dt class="col-sm-5"><i class="bi bi-calendar-event"></i> Hạn chót 3:</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Deadline3)</dd>

                    <dt class="col-sm-5"><i class="bi bi-calendar-check"></i> Ngày hoàn thành:</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.CompletionDate)</dd>

                    <dt class="col-sm-5"><i class="bi bi-check-square"></i> Trạng thái:</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Status)</dd>

                    <dt class="col-sm-5"><i class="bi bi-clock"></i> Thời gian:</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Time)</dd>
                </dl>

                <div class="text-center">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Xóa công việc</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@section Scripts {
    <script>
        function closeDetailSection() {
            window.location.href = '@Url.Action("Index")';
        }
    </script>
}