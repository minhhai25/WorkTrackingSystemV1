@model WorkTrackingSystem.Models.Category

@{
    ViewData["Title"] = "Xóa danh mục";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Xóa danh mục</h1>
        <button type="button" class="btn btn-outline-secondary" onclick="closeDetailSection()">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>

    <p class="text-center">Bạn có chắc chắn muốn xóa danh mục này?</p>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-5"><i class="bi bi-code-square"></i> Mã:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.Code)</dd>

                <dt class="col-sm-5"><i class="bi bi-fonts"></i> Tên:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-5"><i class="bi bi-file-text"></i> Mô tả:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-5"><i class="bi bi-folder-symlink"></i> Danh mục cha:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.IdParent)</dd>

                <dt class="col-sm-5"><i class="bi bi-trash"></i> Đã xóa:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.IsDelete)</dd>

                <dt class="col-sm-5"><i class="bi bi-check-circle"></i> Hoạt động:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.IsActive)</dd>

                <dt class="col-sm-5"><i class="bi bi-calendar-plus"></i> Ngày tạo:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.CreateDate)</dd>

                <dt class="col-sm-5"><i class="bi bi-calendar-check"></i> Ngày cập nhật:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.UpdateDate)</dd>

                <dt class="col-sm-5"><i class="bi bi-person-plus"></i> Người tạo:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.CreateBy)</dd>

                <dt class="col-sm-5"><i class="bi bi-person-check"></i> Người cập nhật:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.UpdateBy)</dd>
            </dl>

            <div class="text-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@section Scripts {
    <script>
        function closeDetailSection() {
            window.location.href = '@Url.Action("Index")';
        }
    </script>
}