@model WorkTrackingSystem.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Chỉnh sửa danh mục</h1>
        <button type="button" class="btn btn-outline-secondary" onclick="closeDetailSection()">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row mb-3">
                    <label asp-for="Code" class="col-sm-3 col-form-label"><i class="bi bi-code-square"></i> Mã:</label>
                    <div class="col-sm-9">
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Name" class="col-sm-3 col-form-label"><i class="bi bi-fonts"></i> Tên:</label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Description" class="col-sm-3 col-form-label"><i class="bi bi-file-text"></i> Mô tả:</label>
                    <div class="col-sm-9">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="IdParent" class="col-sm-3 col-form-label"><i class="bi bi-folder-symlink"></i> Danh mục cha:</label>
                    <div class="col-sm-9">
                        <input asp-for="IdParent" class="form-control" />
                        <span asp-validation-for="IdParent" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label"><i class="bi bi-trash"></i> Đã xóa:</label>
                    <div class="col-sm-9">
                        <select asp-for="IsDelete" class="form-select">
                            <option value="true">Đã xóa</option>
                            <option value="false">Chưa xóa</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label"><i class="bi bi-check-circle"></i> Hoạt động:</label>
                    <div class="col-sm-9">
                        <select asp-for="IsActive" class="form-select">
                            <option value="true">Hoạt động</option>
                            <option value="false">Không hoạt động</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="CreateDate" class="col-sm-3 col-form-label"><i class="bi bi-calendar-plus"></i> Ngày tạo:</label>
                    <div class="col-sm-9">
                        <input asp-for="CreateDate" class="form-control" />
                        <span asp-validation-for="CreateDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="UpdateDate" class="col-sm-3 col-form-label"><i class="bi bi-calendar-check"></i> Ngày cập nhật:</label>
                    <div class="col-sm-9">
                        <input asp-for="UpdateDate" class="form-control" />
                        <span asp-validation-for="UpdateDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="CreateBy" class="col-sm-3 col-form-label"><i class="bi bi-person-plus"></i> Người tạo:</label>
                    <div class="col-sm-9">
                        <input asp-for="CreateBy" class="form-control" />
                        <span asp-validation-for="CreateBy" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="UpdateBy" class="col-sm-3 col-form-label"><i class="bi bi-person-check"></i> Người cập nhật:</label>
                    <div class="col-sm-9">
                        <input asp-for="UpdateBy" class="form-control" />
                        <span asp-validation-for="UpdateBy" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function closeDetailSection() {
            window.location.href = '@Url.Action("Index")';
        }
    </script>
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">