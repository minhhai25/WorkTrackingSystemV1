@model WorkTrackingSystem.Models.Category

@{
    ViewData["Title"] = "Tạo mới danh mục";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Tạo mới danh mục</h1>
        <button type="button" class="btn btn-outline-secondary" onclick="closeDetailSection()">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Code" class="form-label"><i class="bi bi-code-square"></i> Mã:</label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"><i class="bi bi-fonts"></i> Tên:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"><i class="bi bi-file-text"></i> Mô tả:</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Tạo mới</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">