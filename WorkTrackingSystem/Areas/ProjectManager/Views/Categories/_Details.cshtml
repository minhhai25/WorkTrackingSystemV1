@model WorkTrackingSystem.Models.Category

@{
    ViewData["Title"] = "Chi tiết danh mục";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Chi tiết danh mục</h1>
        <button type="button" class="btn btn-outline-secondary" onclick="closeDetailSection()">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <dt><i class="bi bi-code-square"></i> Mã:</dt>
                        <dd>@Html.DisplayFor(model => model.Code)</dd>
                    </div>
                    <div class="col-md-3">
                        <dt><i class="bi bi-fonts"></i> Tên:</dt>
                        <dd>@Html.DisplayFor(model => model.Name)</dd>
                    </div>
                    <div class="col-md-3">
                        <dt><i class="bi bi-file-text"></i> Mô tả:</dt>
                        <dd>@Html.DisplayFor(model => model.Description)</dd>
                    </div>
                    <div class="col-md-3">
                        <dt><i class="bi bi-folder-symlink"></i> Danh mục cha:</dt>
                        <dd>@Html.DisplayFor(model => model.IdParent)</dd>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <dt><i class="bi bi-trash"></i> Đã xóa:</dt>
                        <dd>
                            @if (Model.IsDelete ?? false)
                            {
                                    <span>Đã xóa</span>
                            }
                            else
                            {
                                    <span>Chưa xóa</span>
                            }
                        </dd>
                    </div>
                    <div class="col-md-3">
                        <dt><i class="bi bi-check-circle"></i> Hoạt động:</dt>
                        <dd>
                            @if (@Model.IsActive ?? false)
                            {
                                    <span>Hoạt động</span>
                            }
                            else
                            {
                                    <span>Không hoạt động</span>
                            }
                        </dd>
                    </div>
                    <div class="col-md-3">
                        <dt><i class="bi bi-calendar-plus"></i> Ngày tạo:</dt>
                        <dd>@Html.DisplayFor(model => model.CreateDate)</dd>
                    </div>
                    <div class="col-md-3">
                        <dt><i class="bi bi-calendar-check"></i> Ngày cập nhật:</dt>
                        <dd>@Html.DisplayFor(model => model.UpdateDate)</dd>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <dt><i class="bi bi-person-plus"></i> Người tạo:</dt>
                        <dd>@Html.DisplayFor(model => model.CreateBy)</dd>
                    </div>
                    <div class="col-md-3">
                        <dt><i class="bi bi-person-check"></i> Người cập nhật:</dt>
                        <dd>@Html.DisplayFor(model => model.UpdateBy)</dd>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@section Scripts {
        <script>
            function closeDetailSection() {
                window.location.href = '@Url.Action("Index")';
            }
        </script>
}