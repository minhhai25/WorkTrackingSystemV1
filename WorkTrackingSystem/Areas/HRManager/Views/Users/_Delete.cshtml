@model WorkTrackingSystem.Models.User

@{
    ViewData["Title"] = "Xóa Người Dùng";
 }

<div class=" ">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-person-x-fill"></i> Xóa Người Dùng</h1>
        <a asp-action="Index" class="btn btn-close" aria-label="Đóng"></a>
    </div>

    <h3>Bạn có chắc chắn muốn xóa người dùng này?</h3>
    <div>
        <h4>Người Dùng</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                <i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-2">
                <i class="bi bi-key"></i> @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Password)
            </dd>
            <dt class="col-sm-2">
                <i class="bi bi-trash"></i> @Html.DisplayNameFor(model => model.IsDelete)
            </dt>
            <dd class="col-sm-10">
                @(Model.IsDelete ?? false ? "Đã xóa" : "Chưa xóa")
            </dd>
            <dt class="col-sm-2">
                <i class="bi bi-check-circle"></i> @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-10">
                @(Model.IsActive ?? false ? "Đã kích hoạt" : "Chưa kích hoạt")
            </dd>
            <dt class="col-sm-2">
                <i class="bi bi-calendar-plus"></i> @Html.DisplayNameFor(model => model.CreateDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreateDate)
            </dd>
            <dt class="col-sm-2">
                <i class="bi bi-calendar-check"></i> @Html.DisplayNameFor(model => model.UpdateDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpdateDate)
            </dd>
            <dt class="col-sm-2">
                <i class="bi bi-person-plus"></i> @Html.DisplayNameFor(model => model.CreateBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreateBy)
            </dd>
            <dt class="col-sm-2">
                <i class="bi bi-person-check"></i> @Html.DisplayNameFor(model => model.UpdateBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpdateBy)
            </dd>
            <dt class="col-sm-2">
                <i class="bi bi-person-badge"></i> @Html.DisplayNameFor(model => model.Employee)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Employee.Code) - @Html.DisplayFor(model => model.Employee.FirstName) @Html.DisplayFor(model => model.Employee.LastName) phòng ban: @Html.DisplayFor(model => model.Employee.Department.Name)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </form>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">