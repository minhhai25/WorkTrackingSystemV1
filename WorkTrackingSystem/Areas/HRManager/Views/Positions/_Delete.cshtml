@model WorkTrackingSystem.Models.Position

@{
    ViewData["Title"] = "Xóa vị trí";
 
}

<div class=" ">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-trash"></i> Xóa vị trí</h1>
        <a asp-action="Index" class="btn btn-close" aria-label="Đóng"></a>
    </div>

    <h3>Bạn có chắc chắn muốn xóa vị trí này?</h3>
    <div>
        <h4>Vị trí</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                <i class="bi bi-tag"></i> @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-3">
                <i class="bi bi-file-text"></i> @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-3">
                <i class="bi bi-shield-check"></i> @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-9">
                @(Model.Status ?? false ? "Có quyền quản lý" : "Không có quyền quản lý")
            </dd>
            <dt class="col-sm-3">
                <i class="bi bi-trash"></i> @Html.DisplayNameFor(model => model.IsDelete)
            </dt>
            <dd class="col-sm-9">
                @(Model.IsDelete ?? false ? "Đã xóa" : "Chưa xóa")
            </dd>
            <dt class="col-sm-3">
                <i class="bi bi-check-square"></i> @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-9">
                @(Model.IsActive ?? false ? "Đang hoạt động" : "Không hoạt động")
            </dd>
            <dt class="col-sm-3">
                <i class="bi bi-calendar"></i> @Html.DisplayNameFor(model => model.CreateDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CreateDate)
            </dd>
            <dt class="col-sm-3">
                <i class="bi bi-calendar-check"></i> @Html.DisplayNameFor(model => model.UpdateDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.UpdateDate)
            </dd>
            <dt class="col-sm-3">
                <i class="bi bi-person-plus"></i> @Html.DisplayNameFor(model => model.CreateBy)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CreateBy)
            </dd>
            <dt class="col-sm-3">
                <i class="bi bi-person-check"></i> @Html.DisplayNameFor(model => model.UpdateBy)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.UpdateBy)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Xóa</button>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>