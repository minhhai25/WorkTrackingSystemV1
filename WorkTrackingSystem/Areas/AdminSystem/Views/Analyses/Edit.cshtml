@model WorkTrackingSystem.Models.Analysis

@{
    ViewData["Title"] = "Chỉnh sửa phân tích";
    Layout = "~/Areas/ProjectManager/Views/Shared/_ProjectManager.cshtml";
}

<div class="">
    <h1 class="mb-4">Chỉnh sửa phân tích</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="EmployeeId" class="form-label"><i class="bi bi-person"></i> Nhân viên:</label>
                    <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Total" class="form-label"><i class="bi bi-calculator"></i> Tổng số:</label>
                    <input asp-for="Total" class="form-control" />
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Ontime" class="form-label"><i class="bi bi-check-circle"></i> Đúng hạn:</label>
                    <input asp-for="Ontime" class="form-control" />
                    <span asp-validation-for="Ontime" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Late" class="form-label"><i class="bi bi-exclamation-triangle"></i> Trễ hạn:</label>
                    <input asp-for="Late" class="form-control" />
                    <span asp-validation-for="Late" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Overdue" class="form-label"><i class="bi bi-calendar-x"></i> Quá hạn:</label>
                    <input asp-for="Overdue" class="form-control" />
                    <span asp-validation-for="Overdue" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Processing" class="form-label"><i class="bi bi-hourglass-split"></i> Đang xử lý:</label>
                    <input asp-for="Processing" class="form-control" />
                    <span asp-validation-for="Processing" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Time" class="form-label"><i class="bi bi-clock"></i> Thời gian:</label>
                    <input asp-for="Time" class="form-control" />
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IsDelete" class="form-label"><i class="bi bi-trash"></i> Đã xóa:</label>
                    <input asp-for="IsDelete" class="form-control" />
                    <span asp-validation-for="IsDelete" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IsActive" class="form-label"><i class="bi bi-check-circle"></i> Hoạt động:</label>
                    <input asp-for="IsActive" class="form-control" />
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CreateDate" class="form-label"><i class="bi bi-calendar-plus"></i> Ngày tạo:</label>
                    <input asp-for="CreateDate" class="form-control" />
                    <span asp-validation-for="CreateDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UpdateDate" class="form-label"><i class="bi bi-calendar-check"></i> Ngày cập nhật:</label>
                    <input asp-for="UpdateDate" class="form-control" />
                    <span asp-validation-for="UpdateDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CreateBy" class="form-label"><i class="bi bi-person-plus"></i> Người tạo:</label>
                    <input asp-for="CreateBy" class="form-control" />
                    <span asp-validation-for="CreateBy" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UpdateBy" class="form-label"><i class="bi bi-person-check"></i> Người cập nhật:</label>
                    <input asp-for="UpdateBy" class="form-control" />
                    <span asp-validation-for="UpdateBy" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">