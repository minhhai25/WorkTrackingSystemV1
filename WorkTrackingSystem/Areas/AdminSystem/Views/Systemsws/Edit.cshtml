@model WorkTrackingSystem.Models.Systemsw

@{
    ViewData["Title"] = "Sửa cài đặt hệ thống";
    Layout = "~/Areas/AdminSystem/Views/Shared/_Admin.cshtml";
}

<h1 class="text-center mb-4">Sửa cài đặt hệ thống</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Tên cài đặt</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Value" class="form-label">Giá trị</label>
                        <input asp-for="Value" class="form-control" />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsDelete" class="form-check-input" type="checkbox" id="IsDelete" />
                        <label class="form-check-label" for="IsDelete">Đã xóa</label>
                        <span asp-validation-for="IsDelete" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActive" />
                        <label class="form-check-label" for="IsActive">Đang hoạt động</label>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CreateDate" class="form-label">Ngày tạo</label>
                        <input asp-for="CreateDate" class="form-control" type="date" />
                        <span asp-validation-for="CreateDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UpdateDate" class="form-label">Ngày cập nhật</label>
                        <input asp-for="UpdateDate" class="form-control" type="date" />
                        <span asp-validation-for="UpdateDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CreateBy" class="form-label">Người tạo</label>
                        <input asp-for="CreateBy" class="form-control" />
                        <span asp-validation-for="CreateBy" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UpdateBy" class="form-label">Người cập nhật</label>
                        <input asp-for="UpdateBy" class="form-control" />
                        <span asp-validation-for="UpdateBy" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Lưu</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script> @* Replace with your Font Awesome Kit code *@
}