@model WorkTrackingSystem.Models.Baselineassessment

@{
    ViewData["Title"] = "Chi tiết đánh giá cơ bản";
    Layout = "~/Areas/AdminSystem/Views/Shared/_Admin.cshtml";
}

<h1 class="text-center mb-4">Chi tiết đánh giá cơ bản</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Đánh giá khối lượng</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.VolumeAssessment)</dd>

                    <dt class="col-sm-4 fw-bold">Đánh giá tiến độ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ProgressAssessment)</dd>

                    <dt class="col-sm-4 fw-bold">Đánh giá chất lượng</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.QualityAssessment)</dd>

                    <dt class="col-sm-4 fw-bold">Tóm tắt đánh giá</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SummaryOfReviews)</dd>

                    <dt class="col-sm-4 fw-bold">Thời gian (phút)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Time)</dd>

                    <dt class="col-sm-4 fw-bold">Đánh giá</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Evaluate)</dd>

                    <dt class="col-sm-4 fw-bold">Đã xóa</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IsDelete)</dd>

                    <dt class="col-sm-4 fw-bold">Đang hoạt động</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IsActive)</dd>

                    <dt class="col-sm-4 fw-bold">Ngày tạo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CreateDate)</dd>

                    <dt class="col-sm-4 fw-bold">Ngày cập nhật</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdateDate)</dd>

                    <dt class="col-sm-4 fw-bold">Người tạo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CreateBy)</dd>

                    <dt class="col-sm-4 fw-bold">Người cập nhật</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdateBy)</dd>

                    <dt class="col-sm-4 fw-bold">Nhân viên</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Employee.Id)</dd>
                </dl>

                <div class="d-grid gap-2 mt-3">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary"><i class="fas fa-edit me-2"></i>Sửa</a>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Quay lại danh sách</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script> @* Replace with your Font Awesome Kit code *@
}