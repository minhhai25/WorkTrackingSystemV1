@model WorkTrackingSystem.Models.Baselineassessment

@{
    ViewData["Title"] = "Xóa đánh giá cơ bản";
    Layout = "~/Areas/ProjectManager/Views/Shared/_ProjectManager.cshtml";
}

<div class="container">
    <h1 class="mb-4 text-danger ">Xóa đánh giá cơ bản</h1>

    <div class="card shadow-lg p-4 @(Model.Evaluate == true ? "bg-success bg-opacity-50 text-white" : "bg-danger bg-opacity-50 text-white")">
        <div class="row">
            <div class="col-md-8">
                <p class="fs-5">Bạn có chắc chắn muốn xóa đánh giá cơ bản này?</p>

                <dl class="row fs-5">
                    <dt class="col-sm-4 "><i class="bi bi-person"></i> Nhân viên:</dt>
                    <dd class="col-sm-8  text-dark">
                        @Html.DisplayFor(model => model.Employee.Code) -
                        @Html.DisplayFor(model => model.Employee.FirstName)
                        @Html.DisplayFor(model => model.Employee.LastName)
                    </dd>

                    <dt class="col-sm-4 "><i class="bi bi-bar-chart-line"></i> Đánh giá khối lượng:</dt>
                    <dd class="col-sm-8">
                        <div class="progress">
                            <div class="progress-bar bg-primary" role="progressbar"
                                 style="width: @Model.VolumeAssessment%;border: 2px solid black;"
                                 aria-valuenow="@Model.VolumeAssessment"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                                @Model.VolumeAssessment%
                            </div>
                        </div>
                    </dd>

                    <dt class="col-sm-4 "><i class="bi bi-graph-up"></i> Đánh giá tiến độ:</dt>
                    <dd class="col-sm-8">
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar"
                                 style="width: @Model.ProgressAssessment%;border: 2px solid black;"
                                 aria-valuenow="@Model.ProgressAssessment"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                                @Model.ProgressAssessment%
                            </div>
                        </div>
                    </dd>

                    <dt class="col-sm-4 "><i class="bi bi-star"></i> Đánh giá chất lượng:</dt>
                    <dd class="col-sm-8">
                        <div class="progress">
                            <div class="progress-bar bg-danger" role="progressbar"
                                 style="width: @Model.QualityAssessment%;border: 2px solid black;"
                                 aria-valuenow="@Model.QualityAssessment"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                                @Model.QualityAssessment%
                            </div>
                        </div>
                    </dd>

                    <dt class="col-sm-4 "><i class="bi bi-chat-left-text"></i> Tóm tắt đánh giá:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SummaryOfReviews)</dd>

                    <dt class="col-sm-4 "><i class="bi bi-clock"></i> Thời gian:</dt>
                    <dd class="col-sm-8 text-primary ">
                        @(Model.Time.HasValue ? Model.Time.Value.ToString("MM/yyyy") : "Không có dữ liệu")
                    </dd>

                    <dt class="col-sm-4 "><i class="bi bi-clipboard-check"></i> Đánh giá:</dt>
                    <dd class="col-sm-8">@(Model.Evaluate == true ? "Đạt" : "Chưa đạt")</dd>

                    <dt class="col-sm-4 "><i class="bi bi-trash"></i> Trạng thái xóa:</dt>
                    <dd class="col-sm-8">
                        @(Model.IsDelete.HasValue ? (Model.IsDelete.Value ? "Đã xóa" : "Chưa xóa") : "Không xác định")
                    </dd>

                    <dt class="col-sm-4 "><i class="bi bi-check-circle"></i> Hoạt động:</dt>
                    <dd class="col-sm-8">
                        @(Model.IsActive.HasValue ? (Model.IsActive.Value ? "Hoạt động" : "Chưa hoạt động") : "Không xác định")
                    </dd>

                    <dt class="col-sm-4 "><i class="bi bi-calendar-plus"></i> Ngày tạo:</dt>
                    <dd class="col-sm-8">@Model.CreateDate?.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4 "><i class="bi bi-calendar-check"></i> Ngày cập nhật:</dt>
                    <dd class="col-sm-8">@Model.UpdateDate?.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4 "><i class="bi bi-person-plus"></i> Người tạo:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CreateBy)</dd>

                    <dt class="col-sm-4 "><i class="bi bi-person-check"></i> Người cập nhật:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdateBy)</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="bi bi-trash"></i> Xóa
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
