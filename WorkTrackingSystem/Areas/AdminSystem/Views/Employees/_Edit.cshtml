@model WorkTrackingSystem.Models.Employee

@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
 }

<div class=" ">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="bi bi-person-lines-fill"></i> Chỉnh sửa nhân viên</h1>
        <a asp-action="Index" class="btn btn-close" aria-label="Đóng"></a>
    </div>

    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="DepartmentId" class="form-label"><i class="bi bi-building"></i> Phòng ban</label>
                    <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.DepartmentId"></select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PositionId" class="form-label"><i class="bi bi-briefcase"></i> Vị trí</label>
                    <select asp-for="PositionId" class="form-select" asp-items="ViewBag.PositionId"></select>
                    <span asp-validation-for="PositionId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Code" class="form-label"><i class="bi bi-code-square"></i> Mã nhân viên</label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label"><i class="bi bi-person"></i> Tên</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label"><i class="bi bi-person"></i> Họ</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Gender" class="form-label"><i class="bi bi-gender-ambiguous"></i> Giới tính</label>
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Birthday" class="form-label"><i class="bi bi-calendar-date"></i> Ngày sinh</label>
                    <input asp-for="Birthday" class="form-control" />
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label"><i class="bi bi-phone"></i> Điện thoại</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"><i class="bi bi-envelope"></i> Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="HireDate" class="form-label"><i class="bi bi-calendar-plus"></i> Ngày tuyển dụng</label>
                    <input asp-for="HireDate" class="form-control" />
                    <span asp-validation-for="HireDate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Address" class="form-label"><i class="bi bi-house"></i> Địa chỉ</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Avatar" class="form-label"><i class="bi bi-image"></i> Ảnh đại diện</label>
                    <input asp-for="Avatar" class="form-control" />
                    <span asp-validation-for="Avatar" class="text-danger"></span>
                </div>
               @*  <div class="mb-3" hidden>
                    <label asp-for="IsDelete" class="form-label">IsDelete</label>
                    <input asp-for="IsDelete" class="form-control" />
                    <span asp-validation-for="IsDelete" class="text-danger"></span>
                </div>
                <div class="mb-3" hidden>
                    <label asp-for="IsActive" class="form-label">IsActive</label>
                    <input asp-for="IsActive" class="form-control" />
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div> *@
                <div class="mb-3" hidden>
                    <label asp-for="CreateDate" class="form-label">CreateDate</label>
                    <input asp-for="CreateDate" class="form-control" />
                    <span asp-validation-for="CreateDate" class="text-danger"></span>
                </div>
                <div class="mb-3" hidden>
                    <label asp-for="UpdateDate" class="form-label">UpdateDate</label>
                    <input asp-for="UpdateDate" class="form-control" />
                    <span asp-validation-for="UpdateDate" class="text-danger"></span>
                </div>
                <div class="mb-3" hidden>
                    <label asp-for="CreateBy" class="form-label">CreateBy</label>
                    <input asp-for="CreateBy" class="form-control" />
                    <span asp-validation-for="CreateBy" class="text-danger"></span>
                </div>
                <div class="mb-3" hidden>
                    <label asp-for="UpdateBy" class="form-label">UpdateBy</label>
                    <input asp-for="UpdateBy" class="form-control" />
                    <span asp-validation-for="UpdateBy" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}