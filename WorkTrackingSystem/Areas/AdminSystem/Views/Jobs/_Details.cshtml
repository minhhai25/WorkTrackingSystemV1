@model WorkTrackingSystem.Models.Job

@{
    ViewData["Title"] = "Chi tiết công việc";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-primary"><i class="bi bi-file-earmark-text"></i> Chi tiết công việc</h2>
            <button class="btn btn-outline-danger" onclick="closeDetailSection()">
                <i class="bi bi-x-circle"></i>
            </button>
        </div>

        <div class="row g-4 justify-content-center">
            <div class="col-md-6">
                <div class="card p-3">
                    <h5 class="text-secondary">Thông tin công việc</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Nhân viên:</strong><br /> @Model.Employee.Code - @Model.Employee.FirstName @Model.Employee.LastName</li>
                        <li class="list-group-item"><strong>Tên công việc:</strong><br /> @Model.Name</li>
                        <li class="list-group-item"><strong>Mô tả:</strong><br /> @Model.Description</li>
                        <li class="list-group-item"><strong>Thời gian:</strong><br /> @Model.Time</li>
                        <li class="list-group-item"><strong>Đã xóa:</strong><br /> @((Model.IsDelete ?? false) ? "Đã xóa" : "Chưa xóa")</li>
                        <li class="list-group-item"><strong>Hoạt động:</strong><br /> @((Model.IsActive ?? false) ? "Hoạt động" : "Không hoạt động")</li>
                    </ul>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card p-3">
                    <h5 class="text-secondary">Lịch trình & Trạng thái</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Hạn chót 1:</strong><br /> @Model.Deadline1</li>
                        <li class="list-group-item"><strong>Hạn chót 2:</strong><br /> @Model.Deadline2</li>
                        <li class="list-group-item"><strong>Hạn chót 3:</strong><br /> @Model.Deadline3</li>
                        <li class="list-group-item"><strong>Ngày hoàn thành:</strong><br /> @Model.CompletionDate</li>
                        <li class="list-group-item">
                            <strong>Trạng thái:</strong><br />
                            @switch (Model.Status)
                            {
                                case 1:
                                    <span class="badge bg-success">Hoàn thành</span>
                                    break;
                                case 2:
                                    <span class="badge bg-danger">Chưa hoàn thành</span>
                                    break;
                                case 3:
                                    <span class="badge bg-warning">Hoàn thành muộn</span>
                                    break;
                                case 4:
                                    <span class="badge bg-info">Đang xử lý</span>
                                    break;
                                default:
                                    <span class="badge bg-info">Chưa nhận</span>
                                    break;
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row g-4 mt-3 justify-content-center">
            <div class="col-md-12">
                <div class="card p-3">
                    <h5 class="text-secondary"><i class="bi bi-bar-chart-line"></i> Đánh giá công việc</h5>
                    <div class="mb-2">
                        <label>Khối lượng</label>
                        <div class="progress">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: @Model.VolumeAssessment%;" aria-valuenow="@Model.VolumeAssessment" aria-valuemin="0" aria-valuemax="100">@Model.VolumeAssessment%</div>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label>Tiến độ</label>
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @Model.ProgressAssessment%;" aria-valuenow="@Model.ProgressAssessment" aria-valuemin="0" aria-valuemax="100">@Model.ProgressAssessment%</div>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label>Chất lượng</label>
                        <div class="progress">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: @Model.QualityAssessment%;" aria-valuenow="@Model.QualityAssessment" aria-valuemin="0" aria-valuemax="100">@Model.QualityAssessment%</div>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label>Đánh giá tổng hợp</label>
                        <div class="progress">
                            <div class="progress-bar bg-info" role="progressbar" style="width: @Model.SummaryOfReviews%;" aria-valuenow="@Model.SummaryOfReviews" aria-valuemin="0" aria-valuemax="100">@Model.SummaryOfReviews%</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@section Scripts {
    <script>
        function closeDetailSection() {
            window.location.href = '@Url.Action("Index")';
        }
    </script>
}