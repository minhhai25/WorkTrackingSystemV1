@model WorkTrackingSystem.Models.Job

@{
    ViewData["Title"] = "Sửa công việc";
    Layout = "~/Areas/AdminSystem/Views/Shared/_Admin.cshtml";
}

<h1 class="text-center mb-4">Sửa công việc</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="EmployeeId" class="form-label">Nhân viên</label>
                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId">
                            <option value="">-- Chọn nhân viên --</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label">Danh mục</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                            <option value="">-- Chọn danh mục --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Tên công việc</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Deadline1" class="form-label">Hạn chót 1</label>
                        <input asp-for="Deadline1" class="form-control" type="date" />
                        <span asp-validation-for="Deadline1" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Deadline2" class="form-label">Hạn chót 2</label>
                        <input asp-for="Deadline2" class="form-control" type="date" />
                        <span asp-validation-for="Deadline2" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Deadline3" class="form-label">Hạn chót 3</label>
                        <input asp-for="Deadline3" class="form-control" type="date" />
                        <span asp-validation-for="Deadline3" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CompletionDate" class="form-label">Ngày hoàn thành</label>
                        <input asp-for="CompletionDate" class="form-control" type="date" />
                        <span asp-validation-for="CompletionDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Trạng thái</label>
                        <select asp-for="Status" class="form-control">
                            <option value="Mới">Mới</option>
                            <option value="Đang thực hiện">Đang thực hiện</option>
                            <option value="Hoàn thành">Hoàn thành</option>
                            <option value="Tạm dừng">Tạm dừng</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="VolumeAssessment" class="form-label">Đánh giá khối lượng</label>
                        <input asp-for="VolumeAssessment" class="form-control" type="number" />
                        <span asp-validation-for="VolumeAssessment" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ProgressAssessment" class="form-label">Đánh giá tiến độ</label>
                        <input asp-for="ProgressAssessment" class="form-control" type="number" />
                        <span asp-validation-for="ProgressAssessment" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="QualityAssessment" class="form-label">Đánh giá chất lượng</label>
                        <input asp-for="QualityAssessment" class="form-control" type="number" />
                        <span asp-validation-for="QualityAssessment" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SummaryOfReviews" class="form-label">Tóm tắt đánh giá</label>
                        <textarea asp-for="SummaryOfReviews" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="SummaryOfReviews" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Time" class="form-label">Thời gian (giờ)</label>
                        <input asp-for="Time" class="form-control" type="number" />
                        <span asp-validation-for="Time" class="text-danger"></span>
                    </div>

                   @*  <div class="mb-3 form-check">
                        <input asp-for="IsDelete" class="form-check-input" type="" id="IsDelete" />
                        <label class="form-check-label" for="IsDelete">Đã xóa</label>
                        <span asp-validation-for="IsDelete" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActive" />
                        <label class="form-check-label" for="IsActive">Đang hoạt động</label>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div> *@

                    <div class="mb-3">
                        <label asp-for="CreateDate" class="form-label">Ngày tạo</label>
                        <input asp-for="CreateDate" class="form-control" type="date" />
                        <span asp-validation-for="CreateDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UpdateDate" class="form-label">Ngày cập nhật</label>
                        <input asp-for="UpdateDate" class="form-control" type="date" />
                        <span asp-validation-for="UpdateDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CreateBy" class="form-label">Người tạo</label>
                        <input asp-for="CreateBy" class="form-control" />
                        <span asp-validation-for="CreateBy" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UpdateBy" class="form-label">Người cập nhật</label>
                        <input asp-for="UpdateBy" class="form-control" />
                        <span asp-validation-for="UpdateBy" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Lưu</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script> @* Replace with your Font Awesome Kit code *@
}